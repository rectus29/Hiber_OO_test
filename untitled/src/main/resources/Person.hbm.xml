<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.edeal.frontline.entities.model">
    <union-subclass name="Person" extends="com.edeal.frontline.entities.sys.CustomEntity" abstract="true">
        <property name="civility">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.edeal.frontline.enums.Civility</param>
            </type>
        </property>
        <property name="firstName" type="String"/>
        <property name="familyName" type="String"/>
        <many-to-one name="company" />
        <one-to-one name="mainPosition" class=""/>
    </union-subclass>
</hibernate-mapping>